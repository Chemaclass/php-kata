{
    "description": "A basic PHP Kata Scaffolding",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "php",
        "katas",
        "scaffolding"
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.2",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "autoload": {
        "psr-4": {
            "Kata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KataTests\\": "tests/"
        }
    },
    "scripts": {
        "test-all": [
            "@test-quality",
            "@test-unit"
        ],
        "test-quality": [
            "@csrun",
            "@psalm"
        ],
        "test-unit": "./vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html coverage",
        "psalm": "./vendor/bin/psalm",
        "csfix": "./vendor/bin/php-cs-fixer fix",
        "csrun": "./vendor/bin/php-cs-fixer fix --dry-run"
    }
}
